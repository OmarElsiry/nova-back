# Nova Architecture Configuration
# =================================


# Server Configuration
PORT=5001                      # Port where the Nova backend server will run
HOST=0.0.0.0                   # Host IP - 0.0.0.0 allows access from any network interface
NODE_ENV=development           # Environment mode: development, production, or test
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:5173,https://t.me,https://web.telegram.org,https://miniapp.telegram.org,https://your-vercel-app.vercel.app
                               # List of allowed CORS origins (frontend/web apps that can access this API)


# Database
DATABASE_URL="file:./prisma/data/nova.db"  
                               # SQLite database file path (MAIN DATABASE)


# TON Blockchain - RPC Configuration
TON_RPC_PRIMARY=https://ton.access.orbs.network/v2/mainnet
TON_RPC_FALLBACK=https://ton.api.onfinality.io/rpc?apikey=YOUR_ONFINALITY_API_KEY


# Legacy TON API (kept for compatibility)
# Legacy TON API (kept for compatibility)
TON_API_KEY=YOUR_TONAPI_KEY_HERE


# Wallet Configuration
DEPOSIT_WALLET_ADDRESS=YOUR_DEPOSIT_WALLET_ADDRESS_HERE
WEBSITE_WALLET=YOUR_WEBSITE_WALLET_ADDRESS_HERE
HOT_WALLET_ADDRESS=YOUR_HOT_WALLET_ADDRESS_HERE
HOT_WALLET_PRIVATE_KEY=YOUR_HOT_WALLET_PRIVATE_KEY_BASE64_HERE


# Security (REQUIRED - Application will not start without these)
# Generate secure random strings with: openssl rand -base64 32
JWT_SECRET=# REQUIRED: Min 32 chars. Example: your-very-long-secure-random-string-at-least-32-characters
WEBHOOK_SECRET=# REQUIRED: For deposit notifications. Min 32 chars
HMAC_SECRET=# REQUIRED: For address variant generation. Min 32 chars  
ADMIN_EMAIL=admin@nova.ton
ADMIN_PASSWORD=# REQUIRED: Strong password for admin access


# Deposit Configuration
REQUIRED_CONFIRMATIONS=3                # Number of blockchain confirmations required for a deposit
MIN_DEPOSIT_AMOUNT=10000000            # Minimum deposit: 0.01 TON (10_000_000 nanoton)
MAX_DEPOSIT_AMOUNT=500000000000        # Maximum deposit: 500 TON (500_000_000_000 nanoton)
DEPOSIT_POLL_INTERVAL=10000            # Poll interval in ms (10 seconds)
CHECK_INTERVAL=10000                    # Deposit status check interval in ms (10 seconds)


# Withdrawal Configuration  
DAILY_WITHDRAWAL_LIMIT=500000000000    # Max total withdrawals per day: 500 TON
PER_TX_WITHDRAWAL_LIMIT=50000000000    # Max withdrawal per transaction: 50 TON
MIN_WITHDRAWAL=10000000                # Minimum withdrawal: 0.01 TON
WITHDRAWAL_COOLDOWN_MS=60000           # Cooldown between withdrawals: 60 seconds
REQUIRE_TWO_FACTOR=false
FRAUD_CHECK_ENABLED=true


# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_API_ID=YOUR_TELEGRAM_API_ID_HERE
TELEGRAM_API_HASH=YOUR_TELEGRAM_API_HASH_HERE


# Logging
LOG_LEVEL=info


# External APIs
GIFTS_API_URL=https://channelsseller.site/api
GIFTS_API_ADMIN_PASSWORD=nova_admin_2024
